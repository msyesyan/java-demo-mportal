<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE struts PUBLIC "-//Apache Software Foundation//DTD Struts Configuration 2.1//EN" "http://struts.apache.org/dtds/struts-2.1.dtd">
<struts>
	<constant name="struts.action.extension" value="action,json,," /> 
	<constant name="struts.enable.SlashesInActionNames" value="true" />
	<constant name="struts.convention.result.path" value="/WEB-INF/views/" />
	<constant name="struts.convention.action.disableScanning" value="true" />
	<constant name="struts.mapper.alwaysSelectFullNamespace" value="false"/>
	
	
	<package name="mportal" extends="struts-default">
		<interceptors>
			<interceptor name="transaction" class="com.bstar.mportal.interceptor.TransactionInterceptor"/>
			<interceptor-stack name="mportalStack">
				<interceptor-ref name="transaction"/>
				<interceptor-ref name="defaultStack"/>
			</interceptor-stack>
		</interceptors>
		<default-interceptor-ref name="mportalStack"/>
	</package>
	
	<package name="root" extends="mportal">
		<action name="/login" class="com.bstar.mportal.action.LoginAction">
			<result name="input">/login.jsp</result>
			<result name="success" type="redirect">/WEB-INF/views/admin/channels/index</result>
		</action>	
	</package>
	
	<include file="struts-admin.xml"/>
</struts>